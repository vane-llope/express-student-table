<%- include('../partials/header.ejs') %>
    <h1 class="text-center mt-3">STUDENT'S INFORMATION</h1>
    <%- include('../partials/navbar.ejs') %>

    
    <form action="/" method="POST">
      <div class="form-floating container pl-5 d-flex">
        <h5 class="container">search user by ID</h5>
       
          <div class="form-floating ">
            <input type="text" class="form-control" id="floatingPassword" name="sID" placeholder=" ">
            <label  for="floatingPassword">user ID</label>
          </div>
          <button class="btn  bg-dark text-light" name="submit" type="submit">SEARCH</button>
      </div>
    </form>


        <div class="container mt-5">
            <table class="table table-striped table-dark text-center table-hover">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">NAME</th>
                    <th scope="col">AGE</th>
                    <th scope="col">PHONE</th>
                    <th scope="col">SCORE</th>
                    <th scope="col">EDIT</th>
                    <th scope="col">DELETE</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach(user => {   %>
                  <tr>
                    <th scope="row"><%= user.id %> </th>
                    <td><%= user.name%> </td>
                    <td><%= user.age%> </td>
                    <td><%= user.phone %> </td>
                    <td><%= user.score %> </td>
                    <td><a  href="/edit/<%= user.id %> " > Edit</a></td>
                    <td><a href="/delete-user/<%= user.id %> "> Delete</a></td>
                  </tr>
               
                 <% }); %> 
                </tbody>
              </table>
        </div>

